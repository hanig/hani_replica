# Google OAuth Credentials (from GCP Console)
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret

# Google Account Configuration
# GOOGLE_ACCOUNTS: comma-separated list of account nicknames
GOOGLE_ACCOUNTS=work,personal
# GOOGLE_EMAILS: JSON mapping of account names to email addresses
GOOGLE_EMAILS={"work": "you@company.com", "personal": "you@gmail.com"}
# Tiered search - Tier 1 accounts are searched first
GOOGLE_TIER1=work,personal
GOOGLE_TIER2=

# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens
# Required scopes: repo, read:org, read:user
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_USERNAME=your_username
GITHUB_ORG=your_org

# Slack Tokens
# Create app at: https://api.slack.com/apps
# Enable Socket Mode, add bot scopes: app_mentions:read, chat:write, im:history, im:read, im:write, users:read
SLACK_BOT_TOKEN=xoxb-xxxxxxxxxxxx-xxxxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxx
SLACK_APP_TOKEN=xapp-x-xxxxxxxxxxxx-xxxxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SLACK_WORKSPACE=your_workspace

# Authorized Slack User IDs (comma-separated)
# Find your user ID: Click profile -> More -> Copy member ID
SLACK_AUTHORIZED_USERS=U01234567,U89012345

# OpenAI API Key (for embeddings)
# Model: text-embedding-3-large
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Anthropic API Key (for intent classification and agents)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Bot Mode: "intent" (legacy), "agent" (single agent), "multi_agent" (specialists)
BOT_MODE=agent

# Enable streaming responses (agent and multi_agent modes)
ENABLE_STREAMING=true

# Direct email send behavior
# false (default): tool can only create drafts
# true: SendEmailTool is enabled but still requires explicit Slack button confirmation
ENABLE_DIRECT_EMAIL_SEND=false

# Security Settings
SECURITY_LEVEL=moderate
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BLOCK_DURATION=300

# Audit Logging
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=data/audit.db
AUDIT_RETENTION_DAYS=90

# Database paths (relative to project root)
KNOWLEDGE_GRAPH_DB=data/knowledge_graph.db
CHROMA_DB_PATH=data/chroma

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/engram.log

# Sync settings
SYNC_BATCH_SIZE=100
EMBEDDING_BATCH_SIZE=50
